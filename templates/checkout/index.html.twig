{% extends 'base.html.twig' %}

{% block title %}Paiement - Qataa3.ma{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="fas fa-credit-card"></i> Paiement (Mode Démonstration)</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="alert alert-warning">
                <i class="fas fa-info-circle"></i> <strong>Mode Démonstration :</strong> 
                Aucun paiement réel ne sera effectué. Ce formulaire est une simulation.
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-bag"></i> Récapitulatif de votre commande</h5>
                </div>
                <div class="card-body">
                    {% for item in cart_items %}
                        <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                            <div>
                                <h6 class="mb-1">{{ item.billet.evenement.titre }}</h6>
                                <small class="text-muted">
                                    <span class="badge bg-primary">{{ item.billet.nomType }}</span>
                                    × {{ item.quantite }}
                                </small>
                            </div>
                            <strong>{{ item.sousTotal|number_format(2, '.', ',') }} MAD</strong>
                        </div>
                    {% endfor %}
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Total</h5>
                        <h4 class="text-primary mb-0">{{ total|number_format(2, '.', ',') }} MAD</h4>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-credit-card"></i> Informations de paiement (Simulation)</h5>
                </div>
                <div class="card-body">
                    <form action="{{ path('app_checkout_process') }}" method="post">
                        <div class="mb-3">
                            <label for="cardName" class="form-label">Nom sur la carte</label>
                            <input type="text" class="form-control" id="cardName" placeholder="John Doe" required>
                        </div>

                        <div class="mb-3">
                            <label for="cardNumber" class="form-label">Numéro de carte</label>
                            <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="cardExpiry" class="form-label">Date d'expiration</label>
                                <input type="text" class="form-control" id="cardExpiry" placeholder="MM/AA" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="cardCvv" class="form-label">CVV</label>
                                <input type="text" class="form-control" id="cardCvv" placeholder="123" required>
                            </div>
                        </div>

                        <input type="hidden" name="_token" value="{{ csrf_token('checkout') }}">

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-lock"></i> Confirmer le paiement ({{ total|number_format(2, '.', ',') }} MAD)
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h6><i class="fas fa-shield-alt text-success"></i> Paiement sécurisé</h6>
                    <p class="text-muted small">Vos informations sont protégées et cryptées.</p>
                    
                    <hr>
                    
                    <h6><i class="fas fa-ticket-alt text-primary"></i> Après paiement</h6>
                    <ul class="small text-muted">
                        <li>Tickets avec QR Code</li>
                        <li>Reçu PDF téléchargeable</li>
                        <li>Email de confirmation</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
