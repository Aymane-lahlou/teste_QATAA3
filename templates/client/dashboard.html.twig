{% extends 'base.html.twig' %}

{% block title %}Mon Espace - Qataa3.ma{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="fas fa-user-circle"></i> Mon Espace Client</h1>
    
    <div class="row mb-4">
        <div class="col">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Bienvenue {{ app.user.prenom }} {{ app.user.nom }} !
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-user fa-3x text-primary mb-3"></i>
                    <h5>Mon Profil</h5>
                    <p class="text-muted">Gérer mes informations personnelles</p>
                    <a href="{{ path('app_client_profile') }}" class="btn btn-primary">Accéder</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-ticket-alt fa-3x text-success mb-3"></i>
                    <h5>Mes Tickets</h5>
                    <p class="text-muted">Consulter mes billets achetés</p>
                    <a href="{{ path('app_client_tickets') }}" class="btn btn-success">Accéder</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-receipt fa-3x text-info mb-3"></i>
                    <h5>Mes Reçus</h5>
                    <p class="text-muted">Télécharger mes reçus PDF</p>
                    <a href="{{ path('app_client_recus') }}" class="btn btn-info">Accéder</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
