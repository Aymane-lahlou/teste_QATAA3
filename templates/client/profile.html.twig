{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Qataa3.ma{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="fas fa-user-circle"></i> Mon Profil</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Informations Personnelles</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="30%">Nom:</th>
                            <td>{{ user.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom:</th>
                            <td>{{ user.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone:</th>
                            <td>{{ user.telephone ?? 'Non renseigné' }}</td>
                        </tr>
                        <tr>
                            <th>Date d'inscription:</th>
                            <td>{{ user.dateInscription|date('d/m/Y') }}</td>
                        </tr>
                        <tr>
                            <th>Statut du compte:</th>
                            <td>
                                <span class="badge bg-{{ user.statutCompte == 'actif' ? 'success' : 'danger' }}">
                                    {{ user.statutCompte|upper }}
                                </span>
                            </td>
                        </tr>
                    </table>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_client_dashboard') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour au dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow mb-3">
                <div class="card-body text-center">
                    <i class="fas fa-user-circle fa-5x text-primary mb-3"></i>
                    <h5>{{ user.prenom }} {{ user.nom }}</h5>
                    <p class="text-muted">{{ user.email }}</p>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <h6 class="mb-3"><i class="fas fa-shield-alt text-success"></i> Sécurité</h6>
                    <p class="text-muted small mb-0">
                        Votre compte est sécurisé. Pour toute modification, contactez le support.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
