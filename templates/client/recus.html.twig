{% extends 'base.html.twig' %}

{% block title %}Mes Reçus - Qataa3.ma{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="fas fa-receipt"></i> Mes Reçus</h1>

    {% if recus is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Vous n'avez aucun reçu pour le moment.
        </div>
        <a href="{{ path('app_events') }}" class="btn btn-primary">
            <i class="fas fa-calendar"></i> Découvrir les événements
        </a>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Numéro</th>
                        <th>Date</th>
                        <th>Montant</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recu in recus %}
                        <tr>
                            <td><strong>{{ recu.numeroRecu }}</strong></td>
                            <td>{{ recu.dateRecu|date('d/m/Y H:i') }}</td>
                            <td>{{ recu.montantTotal|number_format(2, '.', ',') }} MAD</td>
                            <td><span class="badge bg-success">Payé (Démo)</span></td>
                            <td>
                                <a href="{{ path('app_client_recu_pdf', {id: recu.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-download"></i> Télécharger PDF
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
