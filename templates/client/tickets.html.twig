{% extends 'base.html.twig' %}

{% block title %}Mes Tickets - Qataa3.ma{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="fas fa-ticket-alt"></i> Mes Tickets</h1>

    {% if tickets is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Vous n'avez aucun ticket pour le moment.
        </div>
        <a href="{{ path('app_events') }}" class="btn btn-primary">
            <i class="fas fa-calendar"></i> Découvrir les événements
        </a>
    {% else %}
        <div class="row g-4">
            {% for ticket in tickets %}
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">{{ ticket.ligneCommande.typeBillet.evenement.titre }}</h5>
                                    <span class="badge bg-primary">{{ ticket.ligneCommande.typeBillet.nomType }}</span>
                                    <span class="badge bg-{{ ticket.statutTicket == 'valide' ? 'success' : 'secondary' }}">
                                        {{ ticket.statutTicket|upper }}
                                    </span>
                                </div>
                            </div>

                            <p class="mb-2">
                                <i class="fas fa-calendar"></i> {{ ticket.ligneCommande.typeBillet.evenement.dateEvenement|date('d/m/Y H:i') }}
                            </p>
                            <p class="mb-3">
                                <i class="fas fa-map-marker-alt"></i> {{ ticket.ligneCommande.typeBillet.evenement.lieu }}
                            </p>

                            <div class="text-center bg-light p-3 rounded">
                                <img src="data:image/png;base64,{{ ticket.codeQr }}" alt="QR Code" class="img-fluid" style="max-width: 200px;">
                                <p class="mt-2 mb-0"><small class="text-muted">Code: {{ ticket.codeTicket }}</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
