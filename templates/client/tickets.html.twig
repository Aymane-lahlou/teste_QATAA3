{% extends 'base.html.twig' %}

{% block title %}Mes Tickets - Qataa3.ma{% endblock %}

{% block body %}
<style>
    body { 
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    /* Header */
    .page-header {
        background: white;
        padding: 32px 40px;
        border-radius: 24px;
        margin-bottom: 32px;
        box-shadow: 0 10px 25px -5px rgba(0,0,0,0.08);
        border: 1px solid rgba(255,255,255,0.8);
        display: flex;
        justify-content: space-between;
        align-items: center;
        animation: slideDown 0.5s ease;
    }
    
    @keyframes slideDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .page-title {
        font-size: 1.85rem;
        font-weight: 800;
        color: #1e293b;
        margin: 0 0 8px 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    .page-subtitle {
        color: #64748b;
        font-size: 0.95rem;
        margin: 0;
    }

    /* Ticket Card "Pass Style" */
    .ticket-card {
        background: white;
        border-radius: 24px;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.8);
        box-shadow: 0 10px 30px -5px rgba(0,0,0,0.1);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        height: 100%;
        position: relative;
        animation: fadeInUp 0.6s ease backwards;
    }
    
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .ticket-card:nth-child(1) { animation-delay: 0.1s; }
    .ticket-card:nth-child(2) { animation-delay: 0.2s; }
    .ticket-card:nth-child(3) { animation-delay: 0.3s; }
    .ticket-card:nth-child(4) { animation-delay: 0.4s; }

    @media (min-width: 768px) {
        .ticket-card { flex-direction: row; }
    }

    .ticket-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 20px 50px -10px rgba(102, 126, 234, 0.25);
        border-color: #c7d2fe;
    }

    /* Partie Gauche : Infos */
    .ticket-info {
        padding: 32px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-right: 2px dashed #e2e8f0;
        position: relative;
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    }
    
    /* Demi-cercles décoratifs */
    .ticket-info::after, .ticket-info::before {
        content: '';
        position: absolute;
        right: -11px;
        width: 22px;
        height: 22px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 50%;
    }
    .ticket-info::before { top: -11px; }
    .ticket-info::after { bottom: -11px; }

    .event-title {
        font-size: 1.35rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 20px;
        line-height: 1.3;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .ticket-meta {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 20px;
    }
    .meta-item {
        color: #475569;
        font-size: 0.95rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    .meta-icon {
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #eff6ff 0%, #e0e7ff 100%);
        border-radius: 8px;
        color: #667eea;
        font-size: 0.9rem;
    }

    /* Badges */
    .badges-row {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }
    .badge-ticket {
        padding: 8px 14px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    .badge-type {
        background: linear-gradient(135deg, #eff6ff 0%, #e0e7ff 100%);
        color: #667eea;
        border: 1.5px solid #c7d2fe;
    }
    .badge-valid {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        color: #059669;
        border: 1.5px solid #a7f3d0;
    }
    .badge-used {
        background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
        color: #64748b;
        border: 1.5px solid #cbd5e1;
    }

    /* Partie Droite : QR Code */
    .ticket-qr-zone {
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
        padding: 28px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-width: 200px;
        gap: 12px;
    }

    .qr-img {
        width: 140px;
        height: 140px;
        border: 4px solid white;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }
    .qr-img:hover {
        transform: scale(1.05);
    }

    .ticket-code {
        font-family: 'Courier New', monospace;
        font-weight: 700;
        font-size: 0.85rem;
        color: #475569;
        background: white;
        padding: 8px 14px;
        border-radius: 8px;
        border: 1.5px solid #e2e8f0;
        letter-spacing: 1px;
    }
    
    /* Bouton d'action */
    .btn-print {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        cursor: pointer;
    }
    .btn-print:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    /* Bouton Retour */
    .btn-back {
        background: white;
        border: 2px solid #e2e8f0;
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 600;
        color: #64748b;
        text-decoration: none;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    .btn-back:hover {
        background: #f8fafc;
        border-color: #cbd5e1;
        color: #334155;
        transform: translateX(-4px);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 40px;
        background: white;
        border-radius: 24px;
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255,255,255,0.8);
        animation: fadeIn 0.6s ease;
    }
    
    @keyframes fadeIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }
    
    .empty-icon-wrapper {
        width: 120px;
        height: 120px;
        margin: 0 auto 24px;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid #e2e8f0;
    }
    .empty-state h3 {
        font-weight: 800;
        color: #1e293b;
        font-size: 1.5rem;
        margin-bottom: 12px;
    }
    .empty-state p {
        color: #64748b;
        font-size: 1rem;
        margin-bottom: 32px;
    }
    .btn-find-event {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        font-size: 1rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        transition: all 0.3s;
    }
    .btn-find-event:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
        color: white;
    }
</style>

<div class="container py-5">
    
    <!-- Header -->
    <div class="page-header">
        <div>
            <h1 class="page-title">
                <i class="fas fa-ticket-alt" style="color: #667eea;"></i>
                Mes Tickets
            </h1>
            <p class="page-subtitle">Retrouvez vos billets électroniques et codes d'accès</p>
        </div>
        <a href="{{ path('app_client_dashboard') }}" class="btn-back">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    {% if ticketsWithQR is empty %}
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon-wrapper">
                <i class="fas fa-ticket-alt fa-3x" style="color: #94a3b8;"></i>
            </div>
            <h3>Aucun ticket actif</h3>
            <p>Réservez dès maintenant pour vos événements préférés.</p>
            <a href="{{ path('app_events') }}" class="btn-find-event">
                <i class="fas fa-search"></i> Découvrir les événements
            </a>
        </div>
    {% else %}
        <div class="row g-4">
            {% for item in ticketsWithQR %}
                {% set ticket = item.ticket %}
                <div class="col-lg-6">
                    <div class="ticket-card">
                        <!-- Info Event -->
                        <div class="ticket-info">
                            <div>
                                <div class="badges-row">
                                    <span class="badge-ticket badge-type">
                                        {{ ticket.ligneCommande.typeBillet.nomType }}
                                    </span>
                                    {% if ticket.statutTicket == 'valide' %}
                                        <span class="badge-ticket badge-valid">
                                            <i class="fas fa-check-circle"></i> VALIDE
                                        </span>
                                    {% else %}
                                        <span class="badge-ticket badge-used">{{ ticket.statutTicket|upper }}</span>
                                    {% endif %}
                                </div>

                                <h3 class="event-title">{{ ticket.ligneCommande.typeBillet.evenement.titre }}</h3>
                                
                                <div class="ticket-meta">
                                    <div class="meta-item">
                                        <div class="meta-icon">
                                            <i class="fas fa-calendar-day"></i>
                                        </div>
                                        <span>{{ ticket.ligneCommande.typeBillet.evenement.dateEvenement|date('d/m/Y à H:i') }}</span>
                                    </div>
                                    <div class="meta-item">
                                        <div class="meta-icon">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </div>
                                        <span>{{ ticket.ligneCommande.typeBillet.evenement.lieu }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- QR Code Zone -->
                        <div class="ticket-qr-zone">
                            <img src="{{ item.qrCode }}" alt="QR Code {{ ticket.codeTicket }}" class="qr-img">
                            <div class="ticket-code">{{ ticket.codeTicket }}</div>
                            <button class="btn-print" onclick="window.print()">
                                <i class="fas fa-print"></i> Imprimer
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
