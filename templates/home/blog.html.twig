<script>
    document.addEventListener('DOMContentLoaded', function() {
        const categoryChips = document.querySelectorAll('.category-chip');
        const blogCards = document.querySelectorAll('.blog-card');
        const featuredArticle = document.querySelector('.featured-article');
        const noResults = document.getElementById('noResults');
        const blogGrid = document.getElementById('blogGrid');

        let currentCategory = 'all';

        function filterArticles() {
            let visibleCount = 0;

            if (featuredArticle) {
                const featuredCat = featuredArticle.dataset.category;
                const matchesCategory = currentCategory === 'all' || featuredCat === currentCategory;
                
                featuredArticle.style.display = matchesCategory ? 'grid' : 'none';
                if (matchesCategory) visibleCount++;
            }

            blogCards.forEach(card => {
                const category = card.dataset.category;
                const matchesCategory = currentCategory === 'all' || category === currentCategory;

                if (matchesCategory) {
                    card.style.display = 'flex';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            if (visibleCount === 0) {
                blogGrid.style.display = 'none';
                noResults.style.display = 'block';
            } else {
                blogGrid.style.display = 'grid';
                noResults.style.display = 'none';
            }
        }

        categoryChips.forEach(chip => {
            chip.addEventListener('click', () => {
                categoryChips.forEach(c => c.classList.remove('active'));
                chip.classList.add('active');
                currentCategory = chip.dataset.category;
                filterArticles();
            });
        });
    });
</script>
