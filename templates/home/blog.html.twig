            }
        }

        @media (max-width: 992px) {
            .featured-article {
                grid-template-columns: 1fr;
            }

            .featured-image {
                min-height: 300px;
            }

            .featured-content {
                padding: 2rem;
            }

            .featured-title {
                font-size: 1.8rem;
            }

            .blog-hero h1 {
                font-size: 2.5rem;
            }

            .blog-container {
                margin-top: 40px;
            }

            .blog-categories {
                grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
            }

            .blog-categories-wrapper {
                padding: 2.5rem 2rem;
            }
        }

        @media (max-width: 768px) {
            .blog-hero {
                padding: 60px 0 30px;
                margin-top: 10px;
            }

            .blog-hero h1 {
                font-size: 2rem;
            }

            .blog-hero p {
                font-size: 1rem;
            }

            .blog-container {
                margin-top: 30px;
            }

            .blog-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .blog-categories-wrapper {
                padding: 2rem 1.5rem;
                border-radius: 25px;
            }

            .categories-header {
                margin-bottom: 2rem;
            }

            .categories-title {
                font-size: 0.75rem;
                letter-spacing: 2px;
            }

            .categories-title::before,
            .categories-title::after {
                width: 20px;
            }

            .blog-categories {
                grid-template-columns: repeat(2, 1fr);
                gap: 1rem;
            }

            .category-chip {
                padding: 1.3rem 1rem;
                border-radius: 16px;
            }

            .category-icon {
                font-size: 2rem;
            }

            .category-label {
                font-size: 0.85rem;
            }

            .category-count {
                width: 24px;
                height: 24px;
                font-size: 0.7rem;
                top: 10px;
                right: 10px;
                min-width: 24px;
            }

            .featured-content {
                padding: 1.5rem;
            }

            .featured-title {
                font-size: 1.5rem;
            }

            .featured-excerpt {
