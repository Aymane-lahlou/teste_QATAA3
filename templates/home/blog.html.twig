                0 0 0 1px rgba(102, 126, 234, 0.05);
            margin-bottom: 4rem;
            position: relative;
            overflow: hidden;
        }

        .blog-categories-wrapper::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(102, 126, 234, 0.08) 0%, transparent 70%);
            border-radius: 50%;
            pointer-events: none;
        }

        .blog-categories-wrapper::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 250px;
            height: 250px;
            background: radial-gradient(circle, rgba(118, 75, 162, 0.06) 0%, transparent 70%);
            border-radius: 50%;
            pointer-events: none;
        }

        .categories-header {
            text-align: center;
            margin-bottom: 2.5rem;
            position: relative;
            z-index: 1;
        }

        .categories-title {
            font-size: 0.8rem;
            font-weight: 800;
            color: #667eea;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-bottom: 0.6rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .categories-title::before,
        .categories-title::after {
            content: '';
            width: 30px;
            height: 2px;
            background: linear-gradient(90deg, transparent, #667eea, transparent);
        }

        .categories-subtitle {
            font-size: 1rem;
            color: #64748b;
            font-weight: 400;
            letter-spacing: 0.3px;
        }

        .blog-categories {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1.2rem;
            max-width: 1000px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        .category-chip {
            position: relative;
            padding: 1.5rem 1.2rem;
            background: #ffffff;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            border: 2px solid rgba(102, 126, 234, 0.08);
            cursor: pointer;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.8rem;
            color: #475569;
            box-shadow: 0 4px 15px rgba(0,0,0,0.02);
            overflow: hidden;
        }

        .category-chip::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
            transition: left 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .category-chip:hover::before {
            left: 0;
        }

        .category-chip:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 
                0 20px 40px rgba(102, 126, 234, 0.15),
                0 0 0 3px rgba(102, 126, 234, 0.1);
            border-color: rgba(102, 126, 234, 0.2);
        }

        .category-chip.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: transparent;
            transform: translateY(-8px) scale(1.05);
            box-shadow: 
                0 20px 50px rgba(102, 126, 234, 0.35),
                0 0 0 4px rgba(102, 126, 234, 0.15);
        }

        .category-chip.active::before {
            display: none;
        }

        .category-icon {
            font-size: 2.5rem;
            display: block;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            filter: grayscale(0.4) brightness(1.1);
            position: relative;
            z-index: 1;
        }

        .category-chip:hover .category-icon {
            transform: scale(1.2) rotate(-8deg);
            filter: grayscale(0) brightness(1);
        }

        .category-chip.active .category-icon {
            transform: scale(1.15) rotate(-5deg);
            filter: grayscale(0) brightness(1.1) drop-shadow(0 4px 8px rgba(0,0,0,0.15));
        }

        .category-label {
            font-size: 0.95rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            position: relative;
            z-index: 1;
        }

        .category-count {
            position: absolute;
            top: 12px;
            right: 12px;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(118, 75, 162, 0.15));
            color: #667eea;
            min-width: 28px;
            height: 28px;
            padding: 0 8px;
            border-radius: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            font-weight: 800;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            border: 2px solid rgba(102, 126, 234, 0.2);
        }

        .category-chip:hover .category-count {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.25), rgba(118, 75, 162, 0.25));
            transform: scale(1.15) rotate(12deg);
            border-color: rgba(102, 126, 234, 0.3);
        }

        .category-chip.active .category-count {
            background: rgba(255, 255, 255, 0.25);
            color: white;
            border-color: rgba(255, 255, 255, 0.4);
            transform: scale(1.1) rotate(8deg);
        }

        /* Animation au chargement */
        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .category-chip {
            animation: slideInUp 0.6s ease-out backwards;
        }

        .category-chip:nth-child(1) { animation-delay: 0.1s; }
        .category-chip:nth-child(2) { animation-delay: 0.15s; }
        .category-chip:nth-child(3) { animation-delay: 0.2s; }
        .category-chip:nth-child(4) { animation-delay: 0.25s; }
        .category-chip:nth-child(5) { animation-delay: 0.3s; }
        .category-chip:nth-child(6) { animation-delay: 0.35s; }
        .category-chip:nth-child(7) { animation-delay: 0.4s; }

        .blog-grid {
