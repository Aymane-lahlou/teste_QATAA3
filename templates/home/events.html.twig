{% extends 'base.html.twig' %}

{% block title %}Événements - Qataa3.ma{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: #f8fafc;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .page-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* ========== HEADER AVEC VIDÉO ========== */
    .events-header {
        position: relative;
        min-height: 450px;
        border-radius: 24px;
        overflow: hidden;
        margin: 30px 0 50px 0;
        display: flex;
        align-items: flex-end;
        padding-bottom: 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }

    .header-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
        animation: videoZoom 20s ease-in-out infinite;
    }

    @keyframes videoZoom {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(180deg, 
            rgba(0, 0, 0, 0.3) 0%, 
            rgba(102, 126, 234, 0.5) 50%,
            rgba(118, 75, 162, 0.6) 100%
        );
        z-index: 2;
        animation: overlayPulse 8s ease-in-out infinite;
    }

    @keyframes overlayPulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.9; }
    }

    /* Particules flottantes */
    .header-particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
        pointer-events: none;
    }

    .particle {
        position: absolute;
        width: 4px;
        height: 4px;
        background: rgba(255, 255, 255, 0.6);
        border-radius: 50%;
        animation: float 8s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0) translateX(0); opacity: 0; }
        10% { opacity: 1; }
        90% { opacity: 1; }
        100% { transform: translateY(-100vh) translateX(50px); opacity: 0; }
    }

    .header-content-band {
        position: relative;
        z-index: 3;
        width: 100%;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(30px) saturate(180%);
        -webkit-backdrop-filter: blur(30px) saturate(180%);
        padding: 35px 45px;
        border: 3px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2),
                    inset 0 1px 0 rgba(255, 255, 255, 0.4);
        border-radius: 20px;
        margin: 0 20px;
        animation: slideInUp 1s ease-out;
    }

    @keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .events-header h1 {
        font-size: 3rem;
        font-weight: 900;
        margin-bottom: 1rem;
        color: white;
        text-shadow: 3px 3px 15px rgba(0, 0, 0, 0.7);
        letter-spacing: -1px;
        animation: titleGlow 3s ease-in-out infinite;
    }

    @keyframes titleGlow {
        0%, 100% { text-shadow: 3px 3px 15px rgba(0, 0, 0, 0.7); }
        50% { text-shadow: 3px 3px 25px rgba(102, 126, 234, 0.8); }
    }

    .events-header h1 i {
        display: inline-block;
        animation: iconBounce 2s ease-in-out infinite;
    }

    @keyframes iconBounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-5px); }
    }

    .events-header p {
        font-size: 1.35rem;
        margin-bottom: 0;
        color: rgba(255, 255, 255, 0.95);
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
        font-weight: 500;
        line-height: 1.6;
    }

    /* ========== SECTION FILTRES ========== */
    .filters-section {
        background: white;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 50px;
        animation: fadeIn 0.8s ease-out 0.3s both;
        border: 1px solid rgba(102, 126, 234, 0.1);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .filters-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .filters-title i {
        color: #667eea;
        animation: filterIconSpin 3s ease-in-out infinite;
    }

    @keyframes filterIconSpin {
        0%, 100% { transform: rotate(0deg); }
        50% { transform: rotate(5deg); }
    }

    .filters-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
    }

    .filter-btn {
        padding: 0.75rem 1.8rem;
        border: 2px solid #e2e8f0;
        border-radius: 50px;
        background: white;
        color: #64748b;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        position: relative;
        overflow: hidden;
    }

    .filter-btn::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
        z-index: -1;
    }

    .filter-btn:hover {
        border-color: #667eea;
        color: #667eea;
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.25);
    }

    .filter-btn:hover::before {
        width: 300px;
        height: 300px;
    }

    .filter-btn.active {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-color: transparent;
        color: white;
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        transform: scale(1.05);
    }

    .filter-btn i {
        transition: transform 0.3s ease;
    }

    .filter-btn:hover i {
        transform: scale(1.2) rotate(5deg);
    }

    /* ========== GRILLE D'ÉVÉNEMENTS ========== */
    .events-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 35px;
        margin-bottom: 60px;
    }

    .event-card-modern {
        background: white;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        display: flex;
        flex-direction: column;
        opacity: 0;
        animation: cardAppear 0.6s ease-out forwards;
        position: relative;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    @keyframes cardAppear {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.9);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .event-card-modern:nth-child(1) { animation-delay: 0.1s; }
    .event-card-modern:nth-child(2) { animation-delay: 0.2s; }
    .event-card-modern:nth-child(3) { animation-delay: 0.3s; }
    .event-card-modern:nth-child(4) { animation-delay: 0.4s; }
    .event-card-modern:nth-child(5) { animation-delay: 0.5s; }
    .event-card-modern:nth-child(6) { animation-delay: 0.6s; }

    .event-card-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 1;
        pointer-events: none;
    }

    .event-card-modern:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 20px 50px rgba(102, 126, 234, 0.25);
    }

    .event-card-modern:hover::before {
        opacity: 1;
    }

    .event-image {
        position: relative;
        height: 260px;
        overflow: hidden;
    }

    .event-image::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.3) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .event-card-modern:hover .event-image::after {
        opacity: 1;
    }

    .event-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .event-card-modern:hover .event-image img {
        transform: scale(1.15) rotate(2deg);
    }

    .event-category-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 10px 18px;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 700;
        backdrop-filter: blur(15px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        z-index: 2;
        animation: badgePulse 2s ease-in-out infinite;
    }

    @keyframes badgePulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .badge-concert { background: rgba(102, 126, 234, 0.95); color: white; }
    .badge-festival { background: rgba(16, 185, 129, 0.95); color: white; }
    .badge-conference { background: rgba(59, 130, 246, 0.95); color: white; }
    .badge-spectacle { background: rgba(245, 158, 11, 0.95); color: white; }
    .badge-formation { background: rgba(239, 68, 68, 0.95); color: white; }
    .badge-sport { background: rgba(139, 92, 246, 0.95); color: white; }

    .event-content {
        padding: 28px;
        flex: 1;
        display: flex;
        flex-direction: column;
        position: relative;
        z-index: 2;
    }

    .event-title {
        font-size: 1.35rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 18px;
        line-height: 1.4;
        transition: color 0.3s ease;
    }

    .event-card-modern:hover .event-title {
        color: #667eea;
    }

    .event-meta {
        display: flex;
        flex-direction: column;
        gap: 14px;
        margin-bottom: 24px;
        flex: 1;
    }

    .event-meta-item {
        display: flex;
        align-items: center;
        gap: 12px;
        color: #64748b;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        padding: 8px 0;
    }

    .event-card-modern:hover .event-meta-item {
        transform: translateX(5px);
    }

    .event-meta-item i {
        width: 22px;
        color: #667eea;
        font-size: 1.1rem;
        transition: transform 0.3s ease;
    }

    .event-card-modern:hover .event-meta-item i {
        transform: scale(1.2);
    }

    .event-footer {
        padding: 0 28px 28px;
        position: relative;
        z-index: 2;
    }

    .btn-view-event {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 14px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        position: relative;
        overflow: hidden;
    }

    .btn-view-event::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s ease;
    }

    .btn-view-event:hover {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.5);
        color: white;
    }

    .btn-view-event:hover::before {
        left: 100%;
    }

    .btn-view-event i {
        transition: transform 0.3s ease;
    }

    .btn-view-event:hover i {
        transform: rotate(15deg) scale(1.1);
    }

    /* ========== ÉTAT VIDE ========== */
    .empty-state {
        text-align: center;
        padding: 100px 20px;
        animation: fadeIn 0.8s ease-out;
    }

    .empty-state-icon {
        width: 140px;
        height: 140px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(118, 75, 162, 0.15));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 35px;
        animation: emptyIconFloat 3s ease-in-out infinite;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }

    @keyframes emptyIconFloat {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }

    .empty-state-icon i {
        font-size: 3.5rem;
        color: #667eea;
        animation: emptyIconPulse 2s ease-in-out infinite;
    }

    @keyframes emptyIconPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .empty-state h3 {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 18px;
    }

    .empty-state p {
        color: #64748b;
        font-size: 1.15rem;
        margin-bottom: 35px;
        line-height: 1.6;
    }

    /* ========== RESPONSIVE ========== */
    @media (max-width: 768px) {
        .events-header {
            min-height: 320px;
            border-radius: 16px;
        }
        
        .events-header h1 {
            font-size: 2rem;
        }
        
        .events-header p {
            font-size: 1rem;
        }
        
        .events-grid {
            grid-template-columns: 1fr;
            gap: 25px;
        }
        
        .filter-btn {
            width: 100%;
            justify-content: center;
        }
        
        .header-content-band {
            padding: 25px 30px;
            margin: 0 15px;
        }
        
        .filters-section {
            padding: 1.5rem;
        }
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Création des particules flottantes
    const header = document.querySelector('.events-header');
    const particlesContainer = document.createElement('div');
    particlesContainer.className = 'header-particles';
    header.insertBefore(particlesContainer, header.firstChild);
    
    for (let i = 0; i < 20; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.animationDelay = Math.random() * 8 + 's';
        particle.style.animationDuration = (8 + Math.random() * 4) + 's';
        particlesContainer.appendChild(particle);
    }

    // Animation au scroll pour les cartes
    const cards = document.querySelectorAll('.event-card-modern');
    
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0) scale(1)';
            }
        });
    }, observerOptions);
    
    cards.forEach(card => {
        observer.observe(card);
    });

    // Effet de parallaxe sur la vidéo
    window.addEventListener('scroll', function() {
        const scrolled = window.pageYOffset;
        const videoHeader = document.querySelector('.events-header');
        if (videoHeader && scrolled < videoHeader.offsetHeight) {
            const video = document.querySelector('.header-video');
            if (video) {
                video.style.transform = `translateY(${scrolled * 0.5}px)`;
            }
        }
    });

    // Animation des filtres
    const filterBtns = document.querySelectorAll('.filter-btn');
    filterBtns.forEach(btn => {
        btn.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-3px) scale(1.05)';
        });
        
        btn.addEventListener('mouseleave', function() {
            if (!this.classList.contains('active')) {
                this.style.transform = 'translateY(0) scale(1)';
            }
        });
    });

    // Effet de vague sur les boutons
    document.querySelectorAll('.btn-view-event').forEach(button => {
        button.addEventListener('click', function(e) {
            let ripple = document.createElement('span');
            ripple.style.position = 'absolute';
            ripple.style.borderRadius = '50%';
            ripple.style.background = 'rgba(255, 255, 255, 0.6)';
            ripple.style.width = ripple.style.height = '100px';
            ripple.style.left = e.clientX - this.offsetLeft - 50 + 'px';
            ripple.style.top = e.clientY - this.offsetTop - 50 + 'px';
            ripple.style.animation = 'ripple 0.6s ease-out';
            this.appendChild(ripple);
            
            setTimeout(() => ripple.remove(), 600);
        });
    });

    // Animation CSS pour la vague
    const style = document.createElement('style');
    style.textContent = `
        @keyframes ripple {
            0% {
                transform: scale(0);
                opacity: 1;
            }
            100% {
                transform: scale(2);
                opacity: 0;
            }
        }
    `;
    document.head.appendChild(style);

    // Smooth scroll pour les ancres
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
});
</script>
{% endblock %}

{% block body %}
<div class="page-container">
    <section class="events-header">
        <video class="header-video" autoplay muted loop playsinline>
            <source src="{{ asset('images/qata3.mp4') }}" type="video/mp4">
        </video>
        
        <div class="video-overlay"></div>
        
        <div class="header-content-band">
            <h1><i class="fas fa-calendar-check"></i> Vivez des moments inoubliables</h1>
            <p>Réservez votre place pour les événements les plus attendus du moment</p>
        </div>
    </section>

    <div class="filters-section">
        <div class="filters-title">
            <i class="fas fa-filter"></i>
            Filtrer par catégorie
        </div>
        <div class="filters-buttons">
            <a href="{{ path('app_events') }}" class="filter-btn {{ current_categorie is null ? 'active' : '' }}">
                <i class="fas fa-th-large"></i> Tous les événements
            </a>
            {% for categorie in categories %}
                <a href="{{ path('app_events', {categorie: categorie}) }}" class="filter-btn {{ current_categorie == categorie ? 'active' : '' }}">
                    {% if categorie == 'Concert' %}
                        <i class="fas fa-music"></i>
                    {% elseif categorie == 'Festival' %}
                        <i class="fas fa-flag"></i>
                    {% elseif categorie == 'Conférence' %}
                        <i class="fas fa-microphone"></i>
                    {% elseif categorie == 'Spectacle' %}
                        <i class="fas fa-theater-masks"></i>
                    {% elseif categorie == 'Formation' %}
                        <i class="fas fa-graduation-cap"></i>
                    {% elseif categorie == 'Sport' %}
                        <i class="fas fa-football-ball"></i>
                    {% endif %}
                    {{ categorie }}
                </a>
            {% endfor %}
        </div>
    </div>

    {% if evenements is empty %}
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-calendar-times"></i>
            </div>
            <h3>Aucun événement trouvé</h3>
            <p>Aucun événement ne correspond à vos critères de recherche.</p>
            <a href="{{ path('app_events') }}" class="btn-view-event" style="max-width: 320px; margin: 0 auto;">
                <i class="fas fa-redo"></i> Voir tous les événements
            </a>
        </div>
    {% else %}
        <div class="events-grid">
            {% for evenement in evenements %}
                <div class="event-card-modern">
                    <div class="event-image">
                        {% if evenement.image %}
                            <img src="{{ asset('images/events/' ~ evenement.image) }}" alt="{{ evenement.titre }}">
                        {% else %}
                            <img src="https://images.unsplash.com/photo-1501281668745-f7f57925c3b4?w=400&h=250&fit=crop" alt="{{ evenement.titre }}">
                        {% endif %}
                        
                        <span class="event-category-badge 
                            {% if evenement.categorie == 'Concert' %}badge-concert
                            {% elseif evenement.categorie == 'Festival' %}badge-festival
                            {% elseif evenement.categorie == 'Conférence' %}badge-conference
                            {% elseif evenement.categorie == 'Spectacle' %}badge-spectacle
                            {% elseif evenement.categorie == 'Formation' %}badge-formation
                            {% elseif evenement.categorie == 'Sport' %}badge-sport
                            {% endif %}">
                            {{ evenement.categorie }}
                        </span>
                    </div>
                    
                    <div class="event-content">
                        <h3 class="event-title">{{ evenement.titre }}</h3>
                        
                        <div class="event-meta">
                            <div class="event-meta-item">
                                <i class="fas fa-calendar-alt"></i>
                                <span>{{ evenement.dateEvenement|date('d/m/Y') }} à {{ evenement.dateEvenement|date('H:i') }}</span>
                            </div>
                            <div class="event-meta-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>{{ evenement.lieu }}</span>
                            </div>
                            <div class="event-meta-item">
                                <i class="fas fa-tag"></i>
                                <span>{{ evenement.categorie }}</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="event-footer">
                        <a href="{{ path('app_event_detail', {id: evenement.id}) }}" class="btn-view-event">
                            <i class="fas fa-ticket-alt"></i>
                            Voir les détails
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}