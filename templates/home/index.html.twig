{% extends 'base.html.twig' %}

{% block title %}Accueil - Qataa3.ma | Billetterie d'événements au Maroc{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        html { scroll-behavior: smooth; }

        /* ===================== HERO PROFESSIONNEL AVEC PARALLAX ===================== */
        .hero-section {
            position: relative;
            height: 90vh;
            min-height: 700px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-bg {
            position: absolute;
            inset: 0;
            background: url('{{ asset('images/concert-hero.jpg') }}') center/cover no-repeat;
            opacity: 0.35;
            transform: scale(1.1);
            transition: transform 8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            filter: brightness(1.1) saturate(1.1);
            will-change: transform;
        }

        .hero-section:hover .hero-bg { transform: scale(1.15); }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background:
                radial-gradient(ellipse at 30% 40%, rgba(59,130,246,0.22), transparent 65%),
                radial-gradient(ellipse at 70% 60%, rgba(139,92,246,0.18), transparent 65%),
                linear-gradient(180deg, rgba(15,23,42,0.5), rgba(15,23,42,0.75));
        }

        .hero-particles {
            position: absolute;
            inset: 0;
            overflow: hidden;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            background: rgba(255,255,255,0.4);
            border-radius: 50%;
            animation: float linear infinite;
        }

        @keyframes float {
            0% { transform: translateY(100vh) scale(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-100vh) scale(1); opacity: 0; }
        }

        .hero-content {
            position: relative;
            z-index: 10;
            text-align: center;
            max-width: 900px;
            padding: 50px 30px;
            animation: heroFadeIn 1.4s cubic-bezier(0.16, 1, 0.3, 1);
        }

        @keyframes heroFadeIn {
            from { opacity: 0; transform: translateY(40px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .hero-badge {
            display: inline-block;
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
            color: #fff;
            padding: 10px 24px;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 24px;
            letter-spacing: 0.5px;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .hero-content h1 {
            font-size: 4.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #fff 0%, #e0e7ff 50%, #c7d2fe 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 55px;
            letter-spacing: -0.03em;
            line-height: 1.08;
            text-shadow: 0 0 60px rgba(255,255,255,0.3);
        }

        .search-container { max-width: 720px; margin: 0 auto; }

        .search-box {
            background: rgba(255,255,255,0.98);
            backdrop-filter: blur(20px);
            padding: 10px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            box-shadow:
                0 30px 60px rgba(15,23,42,0.4),
                0 0 0 1px rgba(255,255,255,0.1) inset;
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
            border: 1px solid rgba(148,163,184,0.2);
        }

        .search-box:hover,
        .search-box:focus-within {
            box-shadow:
                0 40px 80px rgba(15,23,42,0.5),
                0 0 0 1px rgba(59,130,246,0.3) inset;
            transform: translateY(-4px);
        }

        .search-box input {
            border: none;
            flex: 1;
            padding: 18px 26px;
            border-radius: 12px;
            outline: none;
            font-size: 1.05rem;
            background: transparent;
            color: #0f172a;
            font-weight: 500;
        }

        .search-box input::placeholder { color: #64748b; font-weight: 400; }

        .search-box button {
            width: 56px;
            height: 56px;
            border-radius: 14px;
            border: none;
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all .3s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 0 8px 20px rgba(59,130,246,0.35);
        }

        .search-box button:hover {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            transform: scale(1.08) rotate(3deg);
            box-shadow: 0 12px 28px rgba(59,130,246,0.5);
        }

        .search-box button:active { transform: scale(0.95); }

        /* ===================== CAROUSEL 3D COVERFLOW ===================== */
        .carousel-3d-section {
            padding: 120px 0;
            background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
            overflow: hidden;
            position: relative;
        }

        .carousel-3d-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(59,130,246,0.5), transparent);
        }

        .swiper-3d {
            padding: 60px 20px 100px !important;
        }

        .swiper-3d .swiper-slide {
            width: 350px;
            transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .event-card-3d {
            background: rgba(255,255,255,0.98);
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 30px 60px rgba(0,0,0,0.4);
            transform: scale(0.85);
            transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
            border: 1px solid rgba(255,255,255,0.2);
            will-change: transform;
        }

        .swiper-slide-active .event-card-3d {
            transform: scale(1);
            box-shadow: 0 50px 100px rgba(59,130,246,0.5);
            border-color: rgba(59,130,246,0.4);
        }

        .event-card-3d-img {
            position: relative;
            height: 280px;
            overflow: hidden;
            background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
        }

        .event-card-3d img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
            filter: brightness(0.95);
        }

        .swiper-slide-active .event-card-3d img {
            transform: scale(1.1);
            filter: brightness(1);
        }

        .card-3d-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(12px);
            color: #3b82f6;
            text-transform: uppercase;
            font-size: .75rem;
            font-weight: 800;
            padding: 10px 18px;
            border-radius: 999px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            letter-spacing: .1em;
            z-index: 3;
            border: 1px solid rgba(255,255,255,0.5);
        }

        .event-card-3d-body {
            padding: 32px;
            background: white;
        }

        .event-3d-date {
            color: #3b82f6;
            font-weight: 700;
            font-size: 0.92rem;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 14px;
            text-transform: uppercase;
            letter-spacing: 0.06em;
        }

        .event-3d-title {
            font-size: 1.5rem;
            font-weight: 800;
            color: #0f172a;
            margin-bottom: 14px;
            line-height: 1.3;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .event-3d-location {
            color: #64748b;
            font-size: 0.96rem;
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 26px;
            font-weight: 500;
        }

        .btn-3d-reserver {
            width: 100%;
            padding: 16px;
            border-radius: 14px;
            border: none;
            text-align: center;
            font-weight: 700;
            font-size: 1rem;
            color: #fff;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            text-decoration: none;
            display: inline-block;
            transition: all .3s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 0 6px 16px rgba(15,23,42,0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-3d-reserver::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left .5s;
        }

        .btn-3d-reserver:hover::before { left: 100%; }

        .btn-3d-reserver:hover {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(59,130,246,0.5);
            color: #fff;
        }

        /* ===================== CARTE 3D BILLET GOLD ===================== */
        .ticket-section {
            padding: 120px 0;
            background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
            position: relative;
            overflow: hidden;
        }

        .ticket-section::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 50% 50%, rgba(218,165,32,0.08), transparent 70%);
        }

        .ticket-container {
            perspective: 1500px;
            width: 100%;
            max-width: 700px;
            margin: 60px auto 0;
        }

        .ticket-3d {
            position: relative;
            width: 100%;
            height: 340px;
            transform-style: preserve-3d;
            transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
            cursor: pointer;
            will-change: transform;
        }

        .ticket-3d.interactive {
            transform: rotateY(var(--rotateY, 0deg)) rotateX(var(--rotateX, 0deg));
        }

        .ticket-3d:hover {
            transform: scale(1.02);
        }

        .ticket-face {
            position: absolute;
            inset: 0;
            background: 
                linear-gradient(135deg, 
                    #ffffff 0%, 
                    #f8f9fa 50%, 
                    #ffffff 100%);
            border-radius: 24px;
            padding: 40px;
            box-shadow: 
                0 35px 70px rgba(0,0,0,0.4),
                0 0 0 1px rgba(218,165,32,0.3) inset,
                0 0 40px rgba(218,165,32,0.2);
            backface-visibility: hidden;
            border: 3px solid;
            border-image: linear-gradient(135deg, 
                #d4af37 0%,
                #ffd700 25%, 
                #f4e5a0 50%, 
                #ffd700 75%, 
                #d4af37 100%) 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: relative;
            overflow: hidden;
        }

        .ticket-face::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: repeating-linear-gradient(
                0deg,
                transparent,
                transparent 2px,
                rgba(218,165,32,0.03) 2px,
                rgba(218,165,32,0.03) 4px
            );
            animation: shimmer 20s linear infinite;
            pointer-events: none;
        }

        @keyframes shimmer {
            0% { transform: translate(0, 0) rotate(0deg); }
            100% { transform: translate(50%, 50%) rotate(360deg); }
        }

        .ticket-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 24px;
            border-bottom: 3px dashed;
            border-image: linear-gradient(90deg, 
                #d4af37 0%, 
                #ffd700 50%, 
                #d4af37 100%) 1;
            position: relative;
            z-index: 2;
        }

        .ticket-logo {
            font-size: 1.9rem;
            font-weight: 900;
            background: linear-gradient(135deg, 
                #d4af37 0%, 
                #ffd700 25%,
                #f4e5a0 50%,
                #ffd700 75%,
                #d4af37 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: -0.02em;
            text-shadow: 0 2px 10px rgba(218,165,32,0.3);
            filter: drop-shadow(0 2px 4px rgba(218,165,32,0.2));
        }

        .ticket-qr {
            width: 75px;
            height: 75px;
            background: linear-gradient(135deg, #ffd700 0%, #f4e5a0 50%, #ffd700 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 
                0 10px 25px rgba(218,165,32,0.4),
                0 0 0 3px rgba(255,255,255,0.5),
                inset 0 2px 4px rgba(255,255,255,0.5);
            position: relative;
        }

        .ticket-qr::before {
            content: '';
            position: absolute;
            inset: 4px;
            background: white;
            border-radius: 8px;
        }

        .ticket-qr i {
            position: relative;
            z-index: 2;
            background: linear-gradient(135deg, #d4af37 0%, #b8941f 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .ticket-info h3 {
            background: linear-gradient(135deg, 
                #2c2c2c 0%, 
                #1a1a1a 50%,
                #2c2c2c 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.1rem;
            font-weight: 900;
            margin-bottom: 16px;
            line-height: 1.2;
            position: relative;
            z-index: 2;
        }

        .ticket-details {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 24px;
            margin-top: 24px;
            position: relative;
            z-index: 2;
        }

        .ticket-detail-item {
            color: #4a4a4a;
            font-size: 0.95rem;
            font-weight: 600;
        }

        .ticket-detail-item i {
            background: linear-gradient(135deg, #d4af37 0%, #ffd700 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-right: 10px;
            font-size: 1.1rem;
            filter: drop-shadow(0 2px 3px rgba(218,165,32,0.3));
        }

        .ticket-detail-label {
            display: block;
            background: linear-gradient(135deg, #d4af37 0%, #b8941f 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 0.72rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-bottom: 6px;
            font-weight: 800;
        }

        .ticket-glare {
            position: absolute;
            inset: 0;
            border-radius: 24px;
            background: linear-gradient(
                120deg,
                transparent 0%,
                rgba(255,215,0,0.15) 45%,
                rgba(255,215,0,0.3) 50%,
                rgba(255,215,0,0.15) 55%,
                transparent 100%
            );
            opacity: 0;
            transition: opacity 0.3s;
            pointer-events: none;
            z-index: 10;
        }

        .ticket-3d:hover .ticket-glare {
            opacity: 1;
            animation: glareMove 2.5s ease-in-out infinite;
        }

        @keyframes glareMove {
            0%, 100% { transform: translateX(-100%) rotate(-5deg); }
            50% { transform: translateX(100%) rotate(-5deg); }
        }

        /* Effet d'or brillant sur les bords */
        .ticket-face::after {
            content: '';
            position: absolute;
            inset: -2px;
            border-radius: 24px;
            padding: 3px;
            background: linear-gradient(
                45deg,
                #d4af37,
                #ffd700,
                #f4e5a0,
                #ffd700,
                #d4af37
            );
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            opacity: 0.6;
            z-index: 1;
            pointer-events: none;
        }

        /* ===================== MAP 3D DU MAROC RÉELLE ===================== */
        .map-section {
            padding: 120px 0 140px;
            background: linear-gradient(180deg, #0a192f 0%, #1e3a5f 100%);
            position: relative;
            overflow: hidden;
        }

        .map-section::before {
            content: '';
            position: absolute;
            inset: 0;
            background: 
                radial-gradient(circle at 20% 30%, rgba(59,130,246,0.12), transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(139,92,246,0.10), transparent 50%);
        }

        .map-container {
            perspective: 2000px;
            max-width: 1100px;
            margin: 60px auto 0;
            position: relative;
        }

        .map-3d {
            position: relative;
            width: 100%;
            height: 700px;
            background: linear-gradient(135deg, 
                rgba(30,58,95,0.95) 0%, 
                rgba(20,40,70,0.95) 100%);
            border-radius: 30px;
            transform-style: preserve-3d;
            transform: rotateX(8deg) rotateY(-3deg);
            transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 
                0 60px 120px rgba(0,0,0,0.6),
                0 0 0 1px rgba(59,130,246,0.2) inset,
                0 0 80px rgba(59,130,246,0.15);
            overflow: hidden;
            border: 2px solid rgba(59,130,246,0.3);
            will-change: transform;
        }

        .map-3d:hover {
            transform: rotateX(0deg) rotateY(0deg) scale(1.02);
            box-shadow: 
                0 70px 140px rgba(0,0,0,0.7),
                0 0 100px rgba(59,130,246,0.3);
        }

        .morocco-map-real {
            position: absolute;
            width: 85%;
            height: 85%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .morocco-svg {
            width: 100%;
            height: 100%;
            filter: drop-shadow(0 0 30px rgba(59,130,246,0.4));
        }

        .morocco-svg path {
            fill: rgba(59,130,246,0.25);
            stroke: rgba(59,130,246,0.7);
            stroke-width: 1.5;
            transition: all 0.3s ease;
        }

        .morocco-svg path:hover {
            fill: rgba(59,130,246,0.4);
            stroke: rgba(139,92,246,0.9);
            filter: drop-shadow(0 0 20px rgba(59,130,246,0.6));
        }

        .city-pin {
            position: absolute;
            width: 60px;
            height: 60px;
            transform: translateZ(60px);
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            z-index: 10;
        }

        .pin-marker {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            box-shadow: 
                0 15px 40px rgba(59,130,246,0.7),
                0 0 0 4px rgba(255,255,255,0.25),
                0 0 30px rgba(59,130,246,0.5);
            animation: pinPulse 2.8s ease-in-out infinite;
            border: 3px solid rgba(255,255,255,0.5);
            font-size: 1.3rem;
            position: relative;
        }

        .pin-marker::before {
            content: '';
            position: absolute;
            inset: -8px;
            border-radius: 50%;
            border: 2px solid rgba(59,130,246,0.4);
            animation: pingExpand 2.8s ease-out infinite;
        }

        @keyframes pinPulse {
            0%, 100% { 
                transform: scale(1); 
                box-shadow: 0 15px 40px rgba(59,130,246,0.7), 0 0 0 4px rgba(255,255,255,0.25), 0 0 30px rgba(59,130,246,0.5); 
            }
            50% { 
                transform: scale(1.15); 
                box-shadow: 0 20px 55px rgba(59,130,246,0.9), 0 0 0 6px rgba(255,255,255,0.35), 0 0 50px rgba(59,130,246,0.7); 
            }
        }

        @keyframes pingExpand {
            0% {
                transform: scale(0.8);
                opacity: 1;
            }
            100% {
                transform: scale(2);
                opacity: 0;
            }
        }

        .city-pin:hover {
            transform: translateZ(90px) scale(1.3);
            z-index: 30;
        }

        .city-pin:hover .pin-marker {
            animation-play-state: paused;
            background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
            box-shadow: 
                0 20px 60px rgba(139,92,246,0.8),
                0 0 0 5px rgba(255,255,255,0.4),
                0 0 60px rgba(139,92,246,0.6);
        }

        .city-label {
            position: absolute;
            top: -50px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(255,255,255,0.98);
            backdrop-filter: blur(15px);
            padding: 12px 24px;
            border-radius: 999px;
            font-size: 0.95rem;
            font-weight: 800;
            color: #0f172a;
            white-space: nowrap;
            opacity: 0;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 
                0 12px 30px rgba(0,0,0,0.25),
                0 0 0 2px rgba(59,130,246,0.2);
            pointer-events: none;
            border: 2px solid rgba(59,130,246,0.3);
        }

        .city-pin:hover .city-label {
            opacity: 1;
            transform: translateX(-50%) translateY(-8px);
        }

        .city-count {
            position: absolute;
            bottom: -12px;
            right: -12px;
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
            min-width: 32px;
            height: 32px;
            padding: 0 10px;
            border-radius: 999px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.85rem;
            font-weight: 900;
            border: 4px solid white;
            box-shadow: 
                0 6px 16px rgba(239,68,68,0.6),
                0 0 20px rgba(239,68,68,0.4);
        }

        /* ===================== STATISTIQUES ===================== */
        .stats-section {
            background: linear-gradient(180deg, #f1f5f9 0%, #e2e8f0 100%);
            padding: 100px 0;
            position: relative;
        }

        .stat-item {
            background: #ffffff;
            border-radius: 24px;
            padding: 60px 35px;
            text-align: center;
            border: 1px solid #e2e8f0;
            box-shadow: 0 6px 20px rgba(15,23,42,0.08);
            transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
