{% extends 'base.html.twig' %}

{% block title %}Mentions Légales - Qataa3.ma{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap');

        :root {
            --primary: #667eea;
            --primary-dark: #764ba2;
            --dark: #0f172a;
            --gray: #64748b;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', -apple-system, sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e8eeff 100%);
            min-height: 100vh;
            padding-bottom: 60px;
        }

        /* ===================== HERO ===================== */
        .legal-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 100px 0 70px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .legal-hero::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>');
            animation: movePattern 20s linear infinite;
        }

        @keyframes movePattern {
            from { transform: translateY(0); }
            to { transform: translateY(-100px); }
        }

        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
            animation: fadeIn 1s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .hero-icon {
            width: 90px;
            height: 90px;
            background: rgba(255,255,255,0.15);
            backdrop-filter: blur(20px);
            border: 3px solid rgba(255,255,255,0.3);
            border-radius: 25px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 25px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-12px); }
        }

        .hero-icon i {
            font-size: 3rem;
            color: white;
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
        }

        .legal-hero h1 {
            font-size: 3.5rem;
            font-weight: 900;
            color: white;
            margin-bottom: 18px;
            letter-spacing: -0.03em;
            text-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        .hero-date {
            display: inline-block;
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.3);
            color: white;
            padding: 10px 24px;
            border-radius: 50px;
            font-size: 0.95rem;
            font-weight: 600;
            box-shadow: 0 8px 24px rgba(0,0,0,0.2);
        }

        /* ===================== NAVIGATION STICKY ===================== */
        .quick-nav-sticky {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: white;
            border-bottom: 2px solid rgba(102,126,234,0.15);
            box-shadow: 0 4px 20px rgba(102,126,234,0.12);
            animation: slideDown 0.5s ease;
        }

        @keyframes slideDown {
            from { transform: translateY(-100%); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 16px 20px;
        }

        .nav-title {
            font-size: 0.85rem;
            font-weight: 800;
            color: var(--dark);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-title i {
            color: var(--primary);
        }

        .nav-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 8px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 14px;
            background: transparent;
            border-radius: 10px;
            color: var(--gray);
            text-decoration: none;
            font-size: 0.88rem;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            border: 2px solid transparent;
        }

        .nav-link:hover,
        .nav-link.active {
            background: linear-gradient(135deg, rgba(102,126,234,0.1) 0%, rgba(118,75,162,0.1) 100%);
            color: var(--primary);
            border-color: rgba(102,126,234,0.3);
            transform: translateX(3px);
        }

        .nav-link i {
            width: 18px;
            font-size: 1rem;
            color: var(--primary);
        }

        /* ===================== MAIN CONTENT ===================== */
        .legal-main {
            max-width: 900px;
            margin: 40px auto 60px;
            padding: 0 20px;
        }

        .legal-card {
            background: white;
            border-radius: 30px;
            overflow: hidden;
            box-shadow: 
                0 30px 80px rgba(102,126,234,0.15),
                0 0 0 1px rgba(226,232,240,0.5);
            animation: slideUp 0.8s ease 0.2s both;
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(40px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* ===================== SECTIONS ===================== */
        .legal-section {
            padding: 60px 50px;
            border-bottom: 1px solid rgba(226,232,240,0.6);
        }

        .legal-section:last-child {
            border-bottom: none;
        }

        .section-header {
            text-align: center;
            margin-bottom: 45px;
        }

        .section-number {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 65px;
            height: 65px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            border-radius: 18px;
            color: white;
            font-size: 1.8rem;
            font-weight: 900;
            margin-bottom: 18px;
            box-shadow: 
                0 12px 35px rgba(102,126,234,0.4),
                inset 0 2px 0 rgba(255,255,255,0.2);
        }

        .section-title {
            font-size: 2.3rem;
            font-weight: 900;
            color: var(--dark);
            margin-bottom: 14px;
            letter-spacing: -0.02em;
        }

        .section-subtitle {
            color: var(--gray);
            font-size: 1.15rem;
            line-height: 1.7;
            max-width: 700px;
            margin: 0 auto;
        }

        .subsection-title {
            font-size: 1.35rem;
            font-weight: 800;
            color: var(--primary);
            margin: 35px 0 22px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        /* ===================== INFO BOX ===================== */
        .info-box {
            background: linear-gradient(135deg, #f8f9ff 0%, #f1f3ff 100%);
            border: 2px solid rgba(102,126,234,0.2);
            border-radius: 18px;
            padding: 35px;
            margin: 28px 0;
        }

        .info-row {
            display: grid;
            grid-template-columns: 130px 1fr;
            gap: 18px;
            margin-bottom: 18px;
            align-items: flex-start;
        }

        .info-row:last-child {
            margin-bottom: 0;
        }

        .info-label {
            font-weight: 800;
            color: var(--dark);
            font-size: 0.95rem;
        }

        .info-value {
            color: var(--gray);
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .info-value a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border-bottom: 2px solid transparent;
        }

        .info-value a:hover {
            color: var(--primary-dark);
            border-bottom-color: var(--primary-dark);
        }

        /* ===================== LISTE ===================== */
        .list-styled {
            list-style: none;
            padding: 0;
            margin: 28px 0;
        }

        .list-styled li {
            position: relative;
            padding-left: 42px;
            margin-bottom: 18px;
            color: var(--gray);
            line-height: 1.8;
            font-size: 0.98rem;
        }

        .list-styled li::before {
            content: '';
            position: absolute;
            left: 0;
            top: 4px;
            width: 26px;
            height: 26px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(102,126,234,0.3);
        }

        .list-styled li::after {
            content: '✓';
            position: absolute;
            left: 7px;
            top: 4px;
            color: white;
            font-weight: 900;
            font-size: 0.95rem;
        }

        /* ===================== RESPONSIVE ===================== */
        @media (max-width: 768px) {
            .legal-hero {
                padding: 70px 0 50px;
            }

            .legal-hero h1 {
                font-size: 2.2rem;
            }

            .hero-icon {
                width: 75px;
                height: 75px;
            }

            .hero-icon i {
                font-size: 2.2rem;
            }

            .legal-section {
                padding: 40px 28px;
            }

            .section-title {
                font-size: 1.7rem;
            }

            .nav-grid {
                grid-template-columns: 1fr;
            }

            .info-row {
                grid-template-columns: 1fr;
                gap: 6px;
            }

            .nav-container {
                padding: 12px 16px;
            }

            .nav-link {
                padding: 12px 14px;
            }
        }
    </style>
{% endblock %}

