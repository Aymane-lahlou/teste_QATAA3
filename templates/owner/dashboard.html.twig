{% extends 'base.html.twig' %}

{% block title %}Dashboard Owner - Qataa3.ma{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            background: #f8fafc;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        /* ===================== HEADER BLEU FONCÉ QATAA3.MA ===================== */
        .dashboard-header {
            background: linear-gradient(180deg, #6f5ebc 0%, #705bb8 50%, #7257b4 100%);
            color: #fff;
            padding: 50px 0;
            margin-bottom: 40px;
            box-shadow: 0 10px 40px rgba(15, 23, 42, 0.3);
            position: relative;
            overflow: hidden;
        }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: repeating-linear-gradient(
                45deg,
                transparent,
                transparent 10px,
                rgba(255,255,255,0.02) 10px,
                rgba(255,255,255,0.02) 20px
            );
            pointer-events: none;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
            position: relative;
            z-index: 2;
        }

        .header-content h1 {
            font-size: 2.5rem;
            font-weight: 900;
            margin-bottom: 10px;
            letter-spacing: -0.02em;
        }

        .header-content p {
            color: rgba(255,255,255,0.85);
            font-size: 1.1rem;
            font-weight: 500;
        }

        .badge-owner {
            background: rgba(255,255,255,0.15);
            backdrop-filter: blur(15px);
            color: #fff;
            padding: 12px 24px;
            border-radius: 12px;
            font-size: 0.95rem;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            border: 1px solid rgba(255,255,255,0.3);
            transition: all .3s ease;
            cursor: default;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .badge-owner:hover {
            background: rgba(255,255,255,0.25);
            transform: scale(1.05);
            box-shadow: 0 12px 28px rgba(0,0,0,0.25);
        }

        /* ===================== CARTES STATS MODERNES ===================== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
            border-radius: 20px;
            padding: 32px;
            border: 2px solid #e2e8f0;
            box-shadow: 0 4px 15px rgba(15,23,42,0.06);
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.08), transparent);
            transition: left .6s;
        }

        .stat-card:hover::before {
            left: 100%;
        }

        .stat-card::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(59, 130, 246, 0.05) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.4s;
        }

        .stat-card:hover::after {
            opacity: 1;
        }

        .stat-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(15,23,42,0.15);
            border-color: #cbd5e1;
        }

        .stat-card:nth-child(1) { animation-delay: 0.1s; }
        .stat-card:nth-child(2) { animation-delay: 0.2s; }
        .stat-card:nth-child(3) { animation-delay: 0.3s; }
        .stat-card:nth-child(4) { animation-delay: 0.4s; }

        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
            position: relative;
            z-index: 1;
        }

        .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.6rem;
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 0 6px 16px rgba(0,0,0,0.1);
        }

        .stat-card:hover .stat-icon {
            transform: scale(1.15) rotate(-8deg);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

        .icon-green { 
            background: linear-gradient(135deg, #10b981 0%, #059669 100%); 
            color: #fff; 
        }
        .icon-yellow { 
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); 
            color: #fff; 
        }
        .icon-blue { 
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); 
            color: #fff; 
        }
        .icon-purple { 
            background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%); 
            color: #fff; 
        }

        .stat-label {
            font-size: 0.88rem;
            color: #64748b;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            margin-bottom: 10px;
            transition: all .3s;
        }

        .stat-card:hover .stat-label {
            color: #475569;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 900;
            color: #0f172a;
            margin-bottom: 8px;
            line-height: 1;
            transition: all .3s ease;
            letter-spacing: -0.03em;
        }

        .stat-card:hover .stat-value {
            color: #1e293b;
            transform: scale(1.05);
        }

        .stat-description {
            font-size: 0.88rem;
            color: #94a3b8;
            line-height: 1.5;
            transition: color .3s;
            font-weight: 500;
        }

        .stat-card:hover .stat-description {
            color: #64748b;
        }

        /* ===================== QUICK ACTIONS MODERNES ===================== */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .action-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
            border: 2px solid #e2e8f0;
            border-radius: 20px;
            padding: 32px 28px;
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            display: block;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(15, 23, 42, 0.06);
            animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
        }

        .action-card:nth-child(1) { animation-delay: 0.5s; }
        .action-card:nth-child(2) { animation-delay: 0.6s; }
        .action-card:nth-child(3) { animation-delay: 0.7s; }

        .action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.08), transparent);
            transition: left 0.6s;
        }

        .action-card:hover::before {
            left: 100%;
        }

        .action-card::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 4px;
            background: linear-gradient(90deg, #3b82f6, #6366f1);
            transition: width .4s ease;
        }

        .action-card:hover::after {
            width: 100%;
        }

        .action-card:hover {
            border-color: #3b82f6;
            box-shadow: 0 20px 50px rgba(59, 130, 246, 0.2);
            transform: translateY(-10px);
            background: linear-gradient(135deg, #ffffff 0%, #eff6ff 100%);
        }

        .action-icon {
            width: 64px;
            height: 64px;
            border-radius: 14px;
            background: linear-gradient(135deg, #64748b 0%, #475569 100%);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.6rem;
            margin-bottom: 20px;
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 0 8px 20px rgba(100, 116, 139, 0.3);
        }

        .action-card:hover .action-icon {
            background: linear-gradient(135deg, #475569 0%, #334155 100%);
            transform: scale(1.15) rotate(5deg);
            box-shadow: 0 12px 30px rgba(71, 85, 105, 0.5);
        }

        .action-title {
            font-size: 1.2rem;
            font-weight: 800;
            color: #0f172a;
            margin-bottom: 10px;
            transition: all .3s;
            letter-spacing: -0.01em;
        }

        .action-card:hover .action-title {
            color: #1e293b;
        }

        .action-desc {
            font-size: 0.95rem;
            color: #64748b;
            line-height: 1.6;
            transition: color .3s;
            font-weight: 500;
        }

        .action-card:hover .action-desc {
            color: #475569;
        }

        /* ===================== SECTIONS PROFESSIONNELLES ===================== */
        .section-card {
            background: #fff;
            border-radius: 20px;
            border: 2px solid #e2e8f0;
            box-shadow: 0 4px 15px rgba(15,23,42,0.06);
            margin-bottom: 32px;
            overflow: hidden;
            transition: all .4s ease;
            animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
            animation-delay: 0.8s;
        }

        .section-card:hover {
            box-shadow: 0 20px 50px rgba(15,23,42,0.12);
            transform: translateY(-6px);
            border-color: #cbd5e1;
        }

        .section-header {
            padding: 32px 36px;
            border-bottom: 2px solid #e2e8f0;
            display: flex;
            align-items: center;
            gap: 16px;
            transition: background .3s;
        }

        .section-card:hover .section-header {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

        .section-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(135deg, #64748b 0%, #475569 100%);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            transition: all .4s ease;
            box-shadow: 0 6px 16px rgba(100, 116, 139, 0.3);
        }

        .section-card:hover .section-icon {
            background: linear-gradient(135deg, #475569 0%, #334155 100%);
            transform: scale(1.1) rotate(-5deg);
            box-shadow: 0 10px 25px rgba(71, 85, 105, 0.5);
        }

        .section-header h2 {
            font-size: 1.5rem;
            font-weight: 800;
            color: #0f172a;
            letter-spacing: -0.02em;
            transition: color .3s;
        }

        .section-card:hover .section-header h2 {
            color: #1e293b;
        }

        /* ===================== TABLEAUX PROFESSIONNELS ===================== */
        .table-wrapper {
            overflow-x: auto;
        }

        .table-modern {
            width: 100%;
            border-collapse: collapse;
        }

        .table-modern thead {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

        .table-modern th {
            padding: 20px 36px;
            text-align: left;
            font-size: 0.85rem;
            font-weight: 800;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            border-bottom: 2px solid #e2e8f0;
            transition: all .3s;
        }

        .section-card:hover .table-modern th {
            color: #475569;
        }

        .table-modern tbody tr {
            border-bottom: 1px solid #f1f5f9;
            transition: all .3s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .table-modern tbody tr:hover {
            background: linear-gradient(90deg, #f8fafc 0%, transparent 100%);
            transform: translateX(8px);
            box-shadow: -4px 0 0 #3b82f6;
        }

        .table-modern td {
            padding: 22px 36px;
            color: #334155;
            font-size: 0.95rem;
            transition: all .3s;
            font-weight: 500;
        }

        .table-modern tbody tr:hover td {
            color: #1e293b;
        }

        .table-modern tbody tr:last-child {
            border-bottom: none;
        }

        .event-name {
            font-weight: 700;
            color: #0f172a;
            transition: all .3s;
        }

        .table-modern tbody tr:hover .event-name {
            color: #1e293b;
            transform: translateX(3px);
        }

        .table-amount {
            font-weight: 800;
            color: #10b981;
            transition: all .3s;
        }

        .table-modern tbody tr:hover .table-amount {
            color: #059669;
            transform: scale(1.05);
        }

        /* ===================== EMPTY STATE ===================== */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: #94a3b8;
            transition: all .3s;
        }

        .empty-state:hover {
            color: #64748b;
        }

        .empty-state i {
            font-size: 4.5rem;
            margin-bottom: 24px;
            opacity: 0.25;
            transition: all .5s ease;
            background: linear-gradient(135deg, #cbd5e1, #94a3b8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .empty-state:hover i {
            opacity: 0.4;
            transform: scale(1.15) rotate(5deg);
        }

        .empty-state p {
            font-size: 1.05rem;
            margin: 0;
            font-weight: 600;
        }

        /* ===================== FOOTER INFO ===================== */
        .table-footer {
            padding: 22px 36px;
            border-top: 2px solid #e2e8f0;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

        .table-footer p {
            margin: 0;
            color: #64748b;
            font-size: 0.9rem;
            font-weight: 600;
        }

        /* ===================== ANIMATIONS ===================== */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* ===================== RESPONSIVE ===================== */
        @media (max-width: 768px) {
            .dashboard-header {
                padding: 40px 0;
            }

            .header-content {
                flex-direction: column;
                align-items: flex-start;
            }

            .header-content h1 {
                font-size: 2rem;
            }

            .header-content p {
                font-size: 1rem;
            }

            .badge-owner {
                font-size: 0.85rem;
                padding: 10px 18px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .stat-card {
                padding: 26px;
            }

            .stat-value {
                font-size: 2rem;
            }

            .stat-icon {
                width: 50px;
                height: 50px;
                font-size: 1.4rem;
            }

            .action-card {
                padding: 26px 22px;
            }

            .action-icon {
                width: 56px;
                height: 56px;
                font-size: 1.4rem;
            }

            .table-modern th,
            .table-modern td {
                padding: 16px 24px;
                font-size: 0.88rem;
            }

            .section-header {
                padding: 24px 28px;
            }

            .section-header h2 {
                font-size: 1.3rem;
            }

            .section-icon {
                width: 42px;
                height: 42px;
                font-size: 1.1rem;
            }

            .table-footer {
                padding: 18px 28px;
            }

            .empty-state {
                padding: 60px 20px;
            }

            .empty-state i {
                font-size: 3.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- ===================== HEADER BLEU FONCÉ ===================== -->
    <div class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div>
                    <h1>Dashboard Owner</h1>
                    <p>Vue d'ensemble de l'activité de la plateforme</p>
                </div>
                <span class="badge-owner">
                    <i class="fas fa-shield-alt"></i>
                    Propriétaire
                </span>
            </div>
        </div>
    </div>

    <div class="container py-4">
        <!-- ===================== STATISTIQUES KPI ===================== -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Billets vendus</div>
                        <div class="stat-value">{{ total_billets_vendus|default(0) }}</div>
                        <div class="stat-description">Total sur tous les événements</div>
                    </div>
                    <div class="stat-icon icon-green">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Revenus</div>
                        <div class="stat-value">{{ revenus_total|number_format(0, ',', ' ') }}</div>
                        <div class="stat-description">Montant total en MAD</div>
                    </div>
                    <div class="stat-icon icon-yellow">
                        <i class="fas fa-coins"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Clients</div>
                        <div class="stat-value">{{ total_clients|default(0) }}</div>
                        <div class="stat-description">Comptes enregistrés</div>
                    </div>
                    <div class="stat-icon icon-blue">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Événements actifs</div>
                        <div class="stat-value">{{ evenements_actifs|default(0) }}</div>
                        <div class="stat-description">En cours de vente</div>
                    </div>
                    <div class="stat-icon icon-purple">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- ===================== ACTIONS RAPIDES ===================== -->
        <div class="quick-actions">
            <a href="{{ path('app_owner_events') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="action-title">Gérer les événements</div>
                <div class="action-desc">Consulter et gérer tous les événements</div>
            </a>

            <a href="{{ path('app_owner_clients') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-user-friends"></i>
                </div>
                <div class="action-title">Liste des clients</div>
                <div class="action-desc">Voir tous les clients inscrits</div>
            </a>

            <a href="{{ path('app_owner_reports') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="action-title">Rapports détaillés</div>
                <div class="action-desc">Statistiques et analyses</div>
            </a>
        </div>

        <!-- ===================== TOP ÉVÉNEMENTS ===================== -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h2>Top événements par ventes</h2>
            </div>
            <div class="table-wrapper">
                {% if ventes_by_event is defined and ventes_by_event|length > 0 %}
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Événement</th>
                                <th>Billets vendus</th>
                                <th>Revenus (MAD)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for vente in ventes_by_event %}
                                <tr>
                                    <td class="event-name">{{ vente.event_titre }}</td>
                                    <td>{{ vente.total_ventes }}</td>
                                    <td class="table-amount">{{ vente.revenus|number_format(0, ',', ' ') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-chart-bar"></i>
                        <p>Aucune donnée disponible pour le moment</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- ===================== ACTIVITÉ RÉCENTE ===================== -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h2>Activité récente</h2>
            </div>
            <div class="table-wrapper">
                {% if last_orders is defined and last_orders|length > 0 %}
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in last_orders %}
                                <tr>
                                    <td>{{ order.dateCommande|date('d/m/Y H:i') }}</td>
                                    <td>{{ order.client.nom ~ ' ' ~ order.client.prenom }}</td>
                                    <td class="table-amount">{{ order.montantTotal|number_format(0, ',', ' ') }} MAD</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="table-footer">
                        <p>{{ last_orders|length }} dernières commandes affichées</p>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-history"></i>
                        <p>Aucune activité récente enregistrée</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
