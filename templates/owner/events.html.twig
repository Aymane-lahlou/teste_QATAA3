{% extends 'base.html.twig' %}

{% block title %}Événements - Owner{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <h1 class="mb-4"><i class="fas fa-calendar"></i> Tous les Événements (Consultation)</h1>

    <div class="alert alert-warning">
        <i class="fas fa-info-circle"></i> <strong>Mode Lecture Seule</strong> - Vous pouvez consulter les événements mais pas les modifier.
    </div>

    {% if evenements is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Aucun événement enregistré.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Date</th>
                        <th>Lieu</th>
                        <th>Catégorie</th>
                        <th>Statut</th>
                        <th>Billets Vendus</th>
                        <th>Revenus (Démo)</th>
                    </tr>
                </thead>
                <tbody>
                    {% for evenement in evenements %}
                        <tr>
                            <td>{{ evenement.id }}</td>
                            <td><strong>{{ evenement.titre }}</strong></td>
                            <td>{{ evenement.dateEvenement|date('d/m/Y H:i') }}</td>
                            <td>{{ evenement.lieu }}</td>
                            <td><span class="badge bg-info">{{ evenement.categorie }}</span></td>
                            <td>
                                <span class="badge bg-{{ evenement.statut == 'actif' ? 'success' : 'secondary' }}">
                                    {{ evenement.statut|upper }}
                                </span>
                            </td>
                            <td>
                                {% set total_vendus = 0 %}
                                {% for billet in evenement.typeBillets %}
                                    {% set total_vendus = total_vendus + (billet.quantiteTotale - billet.quantiteRestante) %}
                                {% endfor %}
                                {{ total_vendus }}
                            </td>
                            <td>
                                {% set revenus = 0 %}
                                {% for billet in evenement.typeBillets %}
                                    {% set revenus = revenus + ((billet.quantiteTotale - billet.quantiteRestante) * billet.prix) %}
                                {% endfor %}
                                {{ revenus|number_format(2, '.', ',') }} MAD
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
