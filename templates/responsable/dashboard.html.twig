{% extends 'base.html.twig' %}

{% block title %}Dashboard Responsable - Qataa3.ma{% endblock %}

{% block body %}
<style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
        background: #f8fafc;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    /* ===================== HEADER BLEU FONCÉ QATAA3.MA ===================== */
    .admin-header {
       background: linear-gradient(180deg, #6f5ebc 0%, #705bb8 50%, #7257b4 100%);

        padding: 50px 0;
        margin-bottom: 40px;
        box-shadow: 0 10px 40px rgba(15, 23, 42, 0.3);
        color: #fff;
        position: relative;
        overflow: hidden;
    }

    .admin-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: repeating-linear-gradient(
            45deg,
            transparent,
            transparent 10px,
            rgba(255,255,255,0.02) 10px,
            rgba(255,255,255,0.02) 20px
        );
        pointer-events: none;
    }

    .page-title h1 {
        font-size: 2.5rem;
        font-weight: 800;
        color: #fff;
        margin: 0 0 10px 0;
        letter-spacing: -0.02em;
        position: relative;
        z-index: 2;
    }

    .page-title p {
        margin: 0;
        color: rgba(255,255,255,0.85);
        font-size: 1.1rem;
        font-weight: 500;
        position: relative;
        z-index: 2;
    }

    .badge-modern {
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(15px);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.3);
        transition: all .3s ease;
        position: relative;
        z-index: 2;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .badge-modern:hover {
        background: rgba(255,255,255,0.25);
        transform: scale(1.05);
        box-shadow: 0 12px 28px rgba(0,0,0,0.25);
    }

    /* ===================== CARTES D'ACTION MODERNES ===================== */
    .quick-action-card {
        border-radius: 20px;
        padding: 36px 30px;
        text-decoration: none;
        display: block;
        transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
        border: 2px solid #e2e8f0;
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        box-shadow: 0 4px 15px rgba(15, 23, 42, 0.06);
        position: relative;
        overflow: hidden;
        height: 100%;
    }

    .quick-action-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.08), transparent);
        transition: left 0.6s;
    }

    .quick-action-card:hover::before {
        left: 100%;
    }

    .quick-action-card::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 4px;
        background: linear-gradient(90deg, #3b82f6, #6366f1);
        transition: width .4s ease;
    }

    .quick-action-card:hover::after {
        width: 100%;
    }

    .quick-action-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 50px rgba(59, 130, 246, 0.2);
        border-color: #3b82f6;
        background: linear-gradient(135deg, #ffffff 0%, #eff6ff 100%);
    }

    .quick-action-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 20px;
        transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .quick-action-card:hover .quick-action-icon {
        transform: scale(1.15) rotate(5deg);
        box-shadow: 0 12px 30px rgba(0,0,0,0.15);
    }

    .icon-blue { 
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); 
        color: #fff; 
    }
    .icon-green { 
        background: linear-gradient(135deg, #10b981 0%, #059669 100%); 
        color: #fff; 
    }
    .icon-cyan { 
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); 
        color: #fff; 
    }

    .quick-action-title {
        font-size: 1.25rem;
        font-weight: 800;
        color: #0f172a;
        margin-bottom: 10px;
        transition: color .3s;
        letter-spacing: -0.01em;
    }

    .quick-action-card:hover .quick-action-title {
        color: #1e293b;
    }

    .quick-action-desc {
        font-size: 0.95rem;
        color: #64748b;
        margin: 0;
        line-height: 1.6;
        font-weight: 500;
    }

    /* ===================== CARTES STATS ÉLÉGANTES ===================== */
    .stat-card {
        border-radius: 20px;
        border: 2px solid #e2e8f0;
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        box-shadow: 0 4px 15px rgba(15, 23, 42, 0.06);
        position: relative;
        overflow: hidden;
        transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
        height: 100%;
    }

    .stat-card::after {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(59, 130, 246, 0.05) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.4s;
    }

    .stat-card:hover::after {
        opacity: 1;
    }

    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 50px rgba(15, 23, 42, 0.15);
        border-color: #cbd5e1;
    }

    .stat-card-body {
        position: relative;
        z-index: 1;
        padding: 32px;
    }

    .stat-label {
        letter-spacing: 0.08em;
        font-size: 0.85rem;
        text-transform: uppercase;
        color: #64748b;
        margin-bottom: 14px;
        font-weight: 700;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 900;
        color: #0f172a;
        margin-bottom: 10px;
        line-height: 1;
        transition: all .3s;
        letter-spacing: -0.03em;
    }

    .stat-card:hover .stat-value {
        transform: scale(1.05);
    }

    .stat-helper {
        font-size: 0.88rem;
        color: #94a3b8;
        line-height: 1.5;
        font-weight: 500;
    }

    .stat-icon {
        width: 56px;
        height: 56px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 14px;
        font-size: 1.6rem;
        transition: all .4s ease;
        box-shadow: 0 6px 16px rgba(0,0,0,0.1);
    }

    .stat-card:hover .stat-icon {
        transform: scale(1.12) rotate(-8deg);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .stat-icon-primary { 
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); 
        color: #fff; 
    }
    .stat-icon-success { 
        background: linear-gradient(135deg, #10b981 0%, #059669 100%); 
        color: #fff; 
    }
    .stat-icon-warning { 
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); 
        color: #fff; 
    }
    .stat-icon-info { 
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); 
        color: #fff; 
    }

    /* ===================== SECTION TITRE ===================== */
    .section-title {
        font-size: 1.6rem;
        font-weight: 800;
        color: #0f172a;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 12px;
        letter-spacing: -0.02em;
    }

    .section-title i {
        background: linear-gradient(135deg, #3b82f6, #6366f1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.5rem;
    }

    /* ===================== ANIMATIONS ===================== */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .quick-action-card,
    .stat-card {
        animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
    }

    .quick-action-card:nth-child(1) { animation-delay: 0.1s; }
    .quick-action-card:nth-child(2) { animation-delay: 0.2s; }
    .quick-action-card:nth-child(3) { animation-delay: 0.3s; }

    .stat-card:nth-child(1) { animation-delay: 0.1s; }
    .stat-card:nth-child(2) { animation-delay: 0.2s; }
    .stat-card:nth-child(3) { animation-delay: 0.3s; }
    .stat-card:nth-child(4) { animation-delay: 0.4s; }

    /* ===================== RESPONSIVE ===================== */
    @media (max-width: 768px) {
        .admin-header {
            padding: 40px 0;
        }

        .page-title h1 {
            font-size: 2rem;
        }

        .badge-modern {
            font-size: 0.85rem;
            padding: 10px 18px;
        }

        .quick-action-card {
            padding: 28px 24px;
        }

        .quick-action-icon {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        .quick-action-title {
            font-size: 1.1rem;
        }

        .stat-value {
            font-size: 2rem;
        }

        .stat-card-body {
            padding: 26px;
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            font-size: 1.4rem;
        }

        .section-title {
            font-size: 1.4rem;
        }
    }
</style>

<!-- ===================== HEADER BLEU FONCÉ ===================== -->
<div class="admin-header">
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div class="page-title">
                <h1>Dashboard Responsable</h1>
                <p>Bienvenue {{ app.user.prenom }} {{ app.user.nom }}</p>
            </div>
            <span class="badge-modern">
                <i class="fas fa-user-tie"></i> Espace responsable
            </span>
        </div>
    </div>
</div>

<div class="container-fluid px-4 pb-5">

    <!-- ===================== ACTIONS RAPIDES ===================== -->
    <div class="section-title">
        <i class="fas fa-bolt"></i>
        Actions rapides
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-4">
            <a href="{{ path('app_responsable_evenements') }}" class="quick-action-card">
                <div class="quick-action-icon icon-blue">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="quick-action-title">Gestion Événements</div>
                <p class="quick-action-desc">Créer et gérer tous vos événements</p>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="{{ path('app_responsable_clients') }}" class="quick-action-card">
                <div class="quick-action-icon icon-green">
                    <i class="fas fa-users"></i>
                </div>
                <div class="quick-action-title">Gestion Clients</div>
                <p class="quick-action-desc">Consulter et gérer les clients</p>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="{{ path('app_responsable_evenements') }}" class="quick-action-card">
                <div class="quick-action-icon icon-cyan">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <div class="quick-action-title">Gestion Billets</div>
                <p class="quick-action-desc">Gérer les types de billets</p>
            </a>
        </div>
    </div>

    <!-- ===================== STATISTIQUES EN TEMPS RÉEL ===================== -->
    <div class="section-title">
        <i class="fas fa-chart-line"></i>
        Statistiques en temps réel
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="stat-label">Billets vendus</div>
                            <div class="stat-value">{{ billets_vendus|default(0) }}</div>
                        </div>
                        <div class="stat-icon stat-icon-primary">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                    </div>
                    <div class="stat-helper">
                        Ventes de la journée en cours
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="stat-label">Événements actifs</div>
                            <div class="stat-value">{{ evenements_actifs|default(0) }}</div>
                        </div>
                        <div class="stat-icon stat-icon-success">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                    </div>
                    <div class="stat-helper">
                        Événements ouverts à la vente
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="stat-label">Clients inscrits</div>
                            <div class="stat-value">{{ utilisateurs_inscrits|default(0) }}</div>
                        </div>
                        <div class="stat-icon stat-icon-info">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="stat-helper">
                        Comptes clients actifs
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="stat-label">Stock disponible</div>
                            <div class="stat-value">{{ billets_disponibles|default(0) }}</div>
                        </div>
                        <div class="stat-icon stat-icon-warning">
                            <i class="fas fa-box"></i>
                        </div>
                    </div>
                    <div class="stat-helper">
                        Billets restants au total
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
