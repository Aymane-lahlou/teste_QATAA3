{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Qataa3.ma{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body { 
            margin: 0;
            overflow-x: hidden;
        }

        .auth-hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            background: url('{{ asset('images/concert-bg.jpg') }}') center center / cover no-repeat fixed;
            padding: 2rem;
        }

        .auth-hero::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top left, rgba(129, 140, 248, 0.18), transparent 55%),
                        radial-gradient(circle at bottom right, rgba(236, 72, 153, 0.14), transparent 55%),
                        linear-gradient(135deg, rgba(15, 23, 42, 0.94) 0%, rgba(15, 23, 42, 0.90) 50%, rgba(17, 24, 39, 0.92) 100%);
            z-index: 1;
        }

        .auth-container {
            position: relative;
            z-index: 2;
            width: 100%;
            max-width: 460px;
        }

        @keyframes authFadeUp {
            from { opacity: 0; transform: translateY(18px) scale(0.99); }
            to   { opacity: 1; transform: translateY(0) scale(1); }
        }

        .auth-card {
            background: radial-gradient(circle at top left, rgba(148, 163, 184, 0.22), transparent 55%),
                        rgba(15, 23, 42, 0.88);
            backdrop-filter: blur(26px);
            -webkit-backdrop-filter: blur(26px);
            border-radius: 22px;
            padding: 2.6rem 2.4rem;
            border: 1px solid rgba(148, 163, 184, 0.35);
            box-shadow: 0 26px 70px rgba(15, 23, 42, 0.85);
            animation: authFadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .auth-title {
            font-size: 1.7rem;
            font-weight: 700;
            color: #f9fafb;
            margin-bottom: 0.4rem;
            letter-spacing: -0.035em;
        }

        .auth-subtitle {
            font-size: 0.96rem;
            color: rgba(226, 232, 240, 0.7);
            margin-bottom: 2rem;
            letter-spacing: -0.01em;
            line-height: 1.5;
        }

        .form-group { margin-bottom: 1.55rem; }

        .form-label {
            display: block;
            margin-bottom: 0.45rem;
            font-size: 0.86rem;
            font-weight: 500;
            color: rgba(226, 232, 240, 0.92);
            letter-spacing: -0.01em;
        }

        .form-input {
            width: 100%;
            padding: 0.9rem 1rem;
            border-radius: 13px;
            border: 1px solid rgba(148, 163, 184, 0.45);
            font-size: 0.96rem;
            background: rgba(15, 23, 42, 0.85);
            color: #f9fafb;
            transition: all 0.22s cubic-bezier(0.4, 0, 0.2, 1);
            font-family: inherit;
        }

        .form-input::placeholder {
            color: rgba(148, 163, 184, 0.75);
        }

        .form-input:focus {
            outline: none;
            border-color: rgba(129, 140, 248, 0.9);
            background: rgba(15, 23, 42, 0.95);
            box-shadow: 0 0 0 1px rgba(129, 140, 248, 0.7), 0 0 0 6px rgba(129, 140, 248, 0.20);
        }

        .btn-primary {
            width: 100%;
            padding: 0.9rem 1.25rem;
            border-radius: 999px;
            border: none;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 110%);
            color: #ffffff;
            box-shadow: 0 12px 32px rgba(79, 70, 229, 0.55);
            transition: all 0.23s cubic-bezier(0.4, 0, 0.2, 1);
            margin-bottom: 0.85rem;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 16px 40px rgba(79, 70, 229, 0.7);
        }

        .back-link {
            display: block;
            text-align: center;
            color: rgba(165, 180, 252, 0.9);
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.18s;
            margin-top: 1.2rem;
        }

        .back-link:hover {
            color: #e5e7eb;
        }

        .back-link i {
            margin-right: 0.4rem;
        }

        .micro-copy {
            margin-top: 0.3rem;
            font-size: 0.78rem;
            color: rgba(148, 163, 184, 0.85);
            text-align: center;
        }

        .alert-success {
            background: rgba(34, 197, 94, 0.10);
            border: 1px solid rgba(34, 197, 94, 0.5);
            border-radius: 13px;
            padding: 0.85rem 1rem;
            margin-bottom: 1.6rem;
            color: #bbf7d0;
            font-size: 0.86rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .alert-error {
            background: rgba(248, 113, 113, 0.10);
            border: 1px solid rgba(248, 113, 113, 0.5);
            border-radius: 13px;
            padding: 0.85rem 1rem;
            margin-bottom: 1.6rem;
            color: #fecaca;
            font-size: 0.86rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        @media (max-width: 576px) {
            .auth-card {
                padding: 2.1rem 1.7rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section class="auth-hero">
    <div class="auth-container">
        <div class="auth-card">
            <h1 class="auth-title">Mot de passe oublié</h1>
            <p class="auth-subtitle">Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

            {% for message in app.flashes('reset_password_success') %}
                <div class="alert-success">
                    <i class="fas fa-check-circle"></i>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}

            {% for message in app.flashes('reset_password_error') %}
                <div class="alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}

            <form method="post">
                <div class="form-group">
                    <label for="inputEmail" class="form-label">Adresse email</label>
                    <input
                        type="email"
                        id="inputEmail"
                        name="email"
                        class="form-input"
                        placeholder="nom@exemple.com"
                        required
                        autofocus
                    >
                </div>

                <button type="submit" class="btn-primary">
                    Envoyer le lien de réinitialisation
                </button>

                <p class="micro-copy">Un email sera envoyé si cette adresse existe dans notre système.</p>

                <a href="{{ path('app_login') }}" class="back-link">
                    <i class="fas fa-arrow-left"></i>
                    Retour à la connexion
                </a>
            </form>
        </div>
    </div>
</section>
{% endblock %}
